<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCDCD"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_user_settings"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="add"
        app:icon="@drawable/ic_user_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_products"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="add"
        app:icon="@drawable/ic_products"
        app:layout_constraintEnd_toStartOf="@+id/bt_user_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_canvas_draw"
        android:layout_width="97dp"
        android:layout_height="74dp"
        android:layout_marginTop="16dp"
        android:text="Canvas Draw"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="add"
        app:layout_constraintEnd_toStartOf="@+id/bt_products"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_showMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="add"
        android:text="SHOW MAP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>